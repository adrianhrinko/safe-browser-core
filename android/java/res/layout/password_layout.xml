<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id="@+id/passwordEntryLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <TextView
            android:id="@+id/loginFragmentTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="center"
            android:fontFamily="@font/roboto_thin"
            android:textColor="@color/white"
            android:textSize="36dp"
            android:paddingTop="32dp"
            android:layout_centerHorizontal="true"
            android:text="Enter password"/>

    <TextView
            android:id="@+id/loginFragmentDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="center"
            android:fontFamily="@font/roboto_light"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/loginFragmentTitle"
            android:text="Something blablabla"/>

    <EditText
            android:id="@+id/passwordEntry"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/loginFragmentDetail"
            android:layout_width="fill_parent"
            android:maxLength="256"
            android:layout_height="40dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="32dp"
            android:inputType="textPassword"
            android:gravity="center"
            android:textSize="20dp"
            android:saveEnabled="true"
            android:fontFamily="@font/roboto_light"
            android:imeOptions="actionDone"
            android:textColorHint="@color/white"
            android:singleLine="true"
            android:background="@drawable/password_bg"/>

    <TextView
            android:id="@+id/passwordDetail"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:gravity="center"
            android:fontFamily="@font/roboto_light"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/passwordEntry"
            android:text="Detail"/>


    <TextView
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="center"
            android:focusable="true"
            android:padding="20dp"
            android:fontFamily="@font/roboto_light"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text="@string/confirm"/>
</RelativeLayout>